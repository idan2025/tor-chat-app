# Production Environment Variables

# Server
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://toruser:CHANGE_ME@postgres:5432/torchat
DB_HOST=postgres
DB_PORT=5432
DB_NAME=torchat
DB_USER=toruser
DB_PASSWORD=CHANGE_ME

# Security
# JWT_SECRET: docker-compose.yml includes a secure default.
# To override, generate a new secret with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# TOR Configuration
TOR_SOCKS_HOST=tor
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
HIDDEN_SERVICE_DIR=/var/lib/tor/hidden_service
ENABLE_TOR=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

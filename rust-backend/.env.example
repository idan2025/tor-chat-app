# Server
HOST=0.0.0.0
PORT=3000
RUST_LOG=info,tor_chat_backend=debug

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/torchat

# JWT
JWT_SECRET=change-this-secret-key-in-production-make-it-long-and-random
JWT_EXPIRES_IN=86400

# Bcrypt
BCRYPT_COST=12

# TOR
TOR_ENABLED=true
TOR_SOCKS_HOST=127.0.0.1
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_HIDDEN_SERVICE_DIR=/var/lib/tor/hidden_service

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20

# Upload
MAX_FILE_SIZE=1073741824
UPLOAD_DIR=./uploads

<?xml version="1.0" encoding="utf-8"?>
<!--
  React Native EditText Material Background
  This drawable is required for React Native TextInput components
  but is not included in RN 0.73+, so we provide a simple fallback
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke android:width="1dp" android:color="#42000000"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke android:width="2dp" android:color="#FF6200EE"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke android:width="1dp" android:color="#61000000"/>
        </shape>
    </item>
</selector>

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://toruser:torpass@localhost:5432/torchat
DB_HOST=localhost
DB_PORT=5432
DB_NAME=torchat
DB_USER=toruser
DB_PASSWORD=torpass

# Security
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# TOR Configuration
TOR_SOCKS_HOST=localhost
TOR_SOCKS_PORT=9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=
HIDDEN_SERVICE_DIR=/var/lib/tor/hidden_service
ENABLE_TOR=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Logging Configuration
# ENABLE_LOGGING: Controls whether ANY logging occurs (privacy-focused)
#   - true (default): Full logging enabled - console output and log files created
#   - false: ZERO logging mode - NO console output, NO log files, NO logs anywhere
#
# PRIVACY WARNING: When ENABLE_LOGGING=false, the application creates ZERO logs.
# This means:
#   - No error logs
#   - No access logs
#   - No audit trails
#   - No debugging information
#   - Complete privacy and anonymity
#
# This is ideal for maximum privacy in TOR deployments where logging could
# compromise user anonymity. However, it makes debugging and monitoring impossible.
#
# RECOMMENDATION:
#   - Development: ENABLE_LOGGING=true (or omit, defaults to true)
#   - Production (privacy-focused): ENABLE_LOGGING=false
#   - Production (with monitoring): ENABLE_LOGGING=true with LOG_LEVEL=error
#
ENABLE_LOGGING=true
LOG_LEVEL=info
